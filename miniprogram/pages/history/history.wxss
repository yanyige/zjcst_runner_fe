.history-page {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999;
}

/* 历史记录列表 */
.history-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.history-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.history-item:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.15);
}

/* 头部信息 */
.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.date {
  font-size: 28rpx;
  color: #666;
}

.duration {
  font-size: 32rpx;
  font-weight: 600;
  color: #1296db;
}

/* 主要内容 */
.item-content {
  margin-bottom: 20rpx;
}

.distance {
  display: flex;
  align-items: baseline;
  margin-bottom: 20rpx;
}

.distance-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #333;
}

.distance-unit {
  font-size: 28rpx;
  color: #666;
  margin-left: 8rpx;
}

/* 统计信息 */
.stats {
  display: flex;
  gap: 40rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

/* 底部信息 */
.item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.route-info {
  color: #999;
  font-size: 24rpx;
}

.route-points {
  color: #666;
}

.segment-count {
  color: #1296db;
  font-weight: 600;
  margin-left: 16rpx;
}

/* 操作按钮 */
.actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  border: none;
  background: transparent;
}

.delete-btn {
  color: #ff4757;
  background: #ffe6e6;
}

.delete-btn:active {
  background: #ffd6d6;
}