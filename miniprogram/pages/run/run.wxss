.run-page {
  padding-bottom: 80rpx;
}

.stats {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  text-align: center;
}

.stat-item .label {
  font-size: 24rpx;
  color: #888;
}

.stat-item .value {
  font-size: 48rpx;
  font-weight: 700;
  color: #1296db;
  margin-top: 12rpx;
}

.control {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.pause-btn {
  flex: 1;
  margin: 0 24rpx;
  background: #ffd666;
  border-radius: 50rpx;
  color: #7a4d00;
}

.stop-btn {
  flex: 1;
  margin: 0 24rpx;
  background: #ff7875;
  border-radius: 50rpx;
  color: #fff;
}

/* 当前定位样式 */
.current-location {
  background: #f0f9ff;
  border: 2rpx solid #1296db;
  border-radius: 12rpx;
  margin: 20rpx;
}

.location-item.current {
  padding: 20rpx;
  background: #e6f7ff;
  border-radius: 8rpx;
  margin: 16rpx;
}

.location-item.current view:first-child {
  font-weight: 600;
  color: #1296db;
  font-size: 28rpx;
}

.route-list {
  max-height: 300rpx;
}

.route-item {
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f3f3f3;
}

.tips {
  text-align: center;
  margin: 24rpx;
  color: #52c41a;
}

