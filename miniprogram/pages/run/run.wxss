.run-page {
  padding-bottom: 80rpx;
}

.stats {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  text-align: center;
}

.stat-item .label {
  font-size: 24rpx;
  color: #888;
}

.stat-item .value {
  font-size: 48rpx;
  font-weight: 700;
  color: #1296db;
  margin-top: 12rpx;
}

.control {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.pause-btn {
  flex: 1;
  margin: 0 24rpx;
  background: #ffd666;
  border-radius: 50rpx;
  color: #7a4d00;
}

.stop-btn {
  flex: 1;
  margin: 0 24rpx;
  background: #ff7875;
  border-radius: 50rpx;
  color: #fff;
}

/* 当前定位样式 */
.current-location {
  background: #f0f9ff;
  border: 2rpx solid #1296db;
  border-radius: 12rpx;
  margin: 20rpx;
}

.location-item.current {
  padding: 20rpx;
  background: #e6f7ff;
  border-radius: 8rpx;
  margin: 16rpx;
}

.location-item.current view:first-child {
  font-weight: 600;
  color: #1296db;
  font-size: 28rpx;
}

.route-list {
  max-height: 300rpx;
}

.route-item {
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f3f3f3;
}

.tips {
  text-align: center;
  margin: 24rpx;
  color: #52c41a;
}

/* 地图样式 */
.map {
  margin: 20rpx;
}

.map-container {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
  padding: 0 20rpx;
}

/* 结果页面样式 */
.result-interface .section.stats {
  margin-bottom: 20rpx;
}

.result-interface .stat-item {
  background: #f8f9fa;
  border-radius: 8rpx;
  margin-bottom: 12rpx;
}

.result-interface .stat-item .label {
  color: #666;
  font-size: 24rpx;
}

.result-interface .stat-item .value {
  color: #1296db;
  font-size: 32rpx;
  font-weight: 600;
}

/* 分段记录样式 */
.segments {
  margin: 20rpx;
}

.segments-list {
  max-height: 400rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  background: #fafafa;
}

.segment-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #e0e0e0;
  background: white;
  margin: 8rpx;
  border-radius: 8rpx;
}

.segment-item:last-child {
  border-bottom: none;
}

.segment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.segment-index {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.segment-duration {
  font-size: 24rpx;
  color: #666;
}

.segment-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.segment-distance {
  font-size: 32rpx;
  font-weight: 600;
  color: #1296db;
}

.segment-speed {
  font-size: 24rpx;
  color: #666;
}

.segment-time {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 8rpx;
  padding-top: 8rpx;
  border-top: 1rpx solid #f0f0f0;
}

.time-label {
  font-size: 22rpx;
  color: #999;
}

.time-value {
  font-size: 24rpx;
  font-weight: 600;
  color: #1296db;
}

/* 跑步界面的分段记录样式 */
.running-interface .segments {
  margin: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
}

.running-interface .segments-list {
  max-height: 300rpx;
  background: white;
  border-radius: 8rpx;
  border: 1rpx solid #e0e0e0;
}

.running-interface .segment-item {
  background: #fafafa;
  border-radius: 6rpx;
  margin: 8rpx;
  padding: 16rpx;
  border-left: 4rpx solid #1296db;
}

