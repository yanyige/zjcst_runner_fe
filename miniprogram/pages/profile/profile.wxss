.profile-page {
  padding-bottom: 80rpx;
}


.total {
  text-align: center;
}

.total .distance {
  font-size: 56rpx;
  font-weight: 700;
  color: #1296db;
}

.badge-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.badge-item {
  padding: 20rpx;
  border-radius: 12rpx;
  background: #f8fbff;
}

.badge-name {
  font-size: 30rpx;
  font-weight: 600;
}

.logout-btn {
  margin: 48rpx 24rpx;
  background: #ff7875;
  color: #fff;
  border-radius: 50rpx;
}

.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.8);
  font-size: 32rpx;
  color: #666;
}
