form {
  padding-bottom: 48rpx;
}

.input-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  padding-bottom: 12rpx;
}

.input-item text {
  width: 200rpx;
  color: #333;
}

.input-item input {
  flex: 1;
  text-align: right;
  font-size: 28rpx;
}

.gender {
  display: flex;
  justify-content: flex-end;
  gap: 40rpx;
}

.gender-option {
  display: flex;
  align-items: center;
  font-size: 28rpx;
}

.error {
  color: #f56c6c;
  font-size: 24rpx;
  margin: 24rpx 48rpx;
}
