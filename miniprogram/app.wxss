page {
  background: #f7f8fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Arial;
}

.section {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(18, 150, 219, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  color: #0e5fa6;
}

.primary-btn {
  background: linear-gradient(135deg, #1296db, #57c5f7);
  color: #fff;
  border-radius: 48rpx;
  padding: 24rpx;
  text-align: center;
  font-size: 32rpx;
  margin: 16rpx 24rpx;
}

.text-muted {
  color: #8a8a8a;
  font-size: 24rpx;
}

.badge {
  display: inline-block;
  background: rgba(18, 150, 219, 0.1);
  color: #1296db;
  padding: 8rpx 16rpx;
  border-radius: 24rpx;
  font-size: 22rpx;
  margin-right: 12rpx;
}
